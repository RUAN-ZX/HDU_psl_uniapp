.background {
  z-index: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 100vh;
  position: fixed;
  width: 100vw;
}
.background .preface {
  width: 100%;
}
.background {
  height: 1700rpx;
  width: 750rpx;
  position: fixed;
  background-color: #f5f5f5;
  z-index: -1;
}
.content {
  -webkit-transition: 0.3s opacity ease-out;
  transition: 0.3s opacity ease-out;
  overflow: hidden;
}
.content .header {
  position: relative;
  padding: 10px;
  width: 100%;
  background-color: #298FFE;
}
.content .header .text {
  color: #f5f5f5;
  font-size: 20px;
}
.content .header .text .years {
  margin-right: 15rpx;
  display: inline;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  padding: 0px 6px 2px 6px;
  border: 2px solid;
  font-size: 18px;
  border-radius: 2px;
  text-align: center;
}
.content .header .text .years .years-icon {
  margin-left: 10rpx;
}
.content .index_wrapper {
  position: relative;
  padding: 10px;
  z-index: 0;
}
.content .index_wrapper .achievement {
  background-color: #ffffff;
  box-shadow: 6rpx 6rpx 15rpx 3rpx rgba(0, 0, 0, 0.21);
  border-radius: 15rpx;
  z-index: 1;
  position: relative;
  min-height: 200rpx;
  width: 100%;
  padding: 10rpx 20rpx 20rpx 20rpx;
}
.content .index_wrapper .achievement .label {
  font-size: 40rpx;
  font-weight: bolder;
}
.content .index_wrapper .achievement .label .text {
  font-size: 20rpx;
  text-align: right;
  color: #afafaf;
}
.content .index_wrapper .achievement .label .participate {
  font-size: 20rpx;
  text-align: right;
  font-weight: bold;
  color: #298FFE;
}
.content .index_wrapper .achievement .content {
  margin-top: 20rpx;
}
.content .index_wrapper .achievement .content .items_wrapper {
  -webkit-box-flex: 5;
  -webkit-flex: 5;
          flex: 5;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  text-align: center;
}
.content .index_wrapper .achievement .content .items_wrapper .items {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  border-left: 1.1px solid #efefef;
  border-right: 1.1px solid #efefef;
}
.content .index_wrapper .achievement .content .items_wrapper .items .item_iconfont {
  font-size: 120rpx;
}
.content .index_wrapper .achievement .content .items_wrapper .items .name {
  margin-top: -20rpx;
  font-size: 25rpx;
  margin-bottom: 20rpx;
}
.content .index_wrapper .achievement .content .items_wrapper .items .value {
  font-size: 80rpx;
  color: #298FFE;
  font-weight: bolder;
  font-family: 'STXinwei', Courier, monospace;
}
.content .index_wrapper .achievement .content .info {
  font-size: 25rpx;
  margin-top: 10rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.content .index_wrapper .achievement .content .info .value {
  color: #298FFE;
}
.content .choice {
  z-index: 5;
  position: fixed;
  padding-top: 10px;
  width: 100vw;
  display: block;
  background-color: #ffffff;
  -webkit-transition: 0.5s ease-out;
  transition: 0.5s ease-out;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  display: grid;
  grid-template-columns: repeat(3, 195rpx);
  grid-template-rows: repeat(4, 97rpx);
  grid-row-gap: 10rpx;
  grid-column-gap: 39rpx;
  border-bottom: 1px solid #efefef;
  box-shadow: 6rpx 6rpx 15rpx 3rpx rgba(0, 0, 0, 0.21);
}
.content .choice .title {
  background-color: #298FFE;
  height: 30px;
  font-size: 15px;
  line-height: 30px;
  text-align: center;
  border-radius: 5px;
  -webkit-transition: 0.2s ease-out;
  transition: 0.2s ease-out;
}
.content .choice .active {
  border: 1.5px solid #298FFE;
  background-color: #f5f5f5;
}
.content .choice_hide {
  display: none;
}
.content .shield {
  height: 1700rpx;
  width: 750rpx;
  position: fixed;
  background-color: #f5f5f5;
}

