  -webkit-box-flex: 7;
  -webkit-flex: 7;
          flex: 7;
  height: 40px;
  font-size: 16px;
}
.login .psw .password {
  color: #afafaf;
  font-size: 16px;
}
.login .psw .wrap {
  height: 20px;
}
.login .psw .captcha {
  margin: 10px 0 0 30rpx;
  text-align: center;
  height: 20px;
  font-size: 12px;
  line-height: 20px;
  opacity: 1;
  display: block;
  -webkit-transition: 0.3s opacity ease-out;
  transition: 0.3s opacity ease-out;
}
.login .psw .captcha:active {
  opacity: 0.1;
}
.login .hint {
  margin: 5px 0 5px 0;
  font-size: 14px;
  padding-left: 5px;
  line-height: 20px;
  border: 1px solid #298FFE;
  color: #298FFE;
  border-radius: 5px;
  word-wrap: break-word;
}
.login .loginBtn {
  line-height: 40px;
  height: 40px;
