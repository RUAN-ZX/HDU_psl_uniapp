.login {
  position: relative;
  margin: 20px;
  z-index: 0;
}
.login .user {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  line-height: 40px;
  border-bottom: 1px solid #efefef;
}
.login .user .user_input {
  -webkit-box-flex: 9;
  -webkit-flex: 9;
          flex: 9;
  height: 40px;
  font-size: 16px;
}
.login .user .text {
  color: #afafaf;
  font-size: 16px;
}
.login .psw {
  margin-top: 20px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
